<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Colors -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="#5B27B8"
    android:centerColor="#DAD5D4"
    android:endColor="#154974"
    android:useLevel="false" />


    <corners android:radius="24dp" />


    <stroke
        android:width="2dp"
        android:color="#131939" />


    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp" />
</shape>
